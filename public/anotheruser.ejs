<%- include("header.ejs") %>   


<section class="container profile-section mt-5 text-dark">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= upic %>" class="rounded-circle" style="width: 150px;"
  alt="Avatar" />

        <!-- <img src="your_profile_picture.jpg" alt="Your profile picture" class="img-fluid rounded-circle mb-4"> -->
        <h2>Name:</h2>
        <h4 class="h4 mb-3"><%= name %></h4>

        <h2>Email:</h2>
        <!-- <ul class="list-group list-group-flush"> -->
        <h4 class="list-group-item"> <%= email %></h4>
          <!-- <li class="list-group-item"><i class="fas fa-link me-2"></i> Your website link (if any)</li> -->

      </div>
      <div class="col-md-8">
        <h2>Articles from  <%= name %></h2>

        <% articles.forEach(function(article){ %>

          <div class="col">
            <div id="cardid" class="card h-100  bg-dark text-white">
              <!-- <img src="post_image1.jpg" class="card-img-top" alt="..."> -->
              <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text"><%= article.content.slice(0,100) %>.....</p>
                <a href="/blogs/<%= article._id %>" class="btn btn-primary">Read More</a>
              
              </div>
            </div>

            <br>
              
          </div>

        
        <% }); %>

      </div>
    </div>
  </section>

<%- include("footer.ejs") %> 