<%- include("header.ejs") %> 

<% if (value === "1") { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>New blog posted successfully</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } else if (value === "2") { %> <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Message sent successfully</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<%}  else if (value === "3") { %> <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>No results found</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <%}  else if (value === "4") { %> <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Logged in successfully</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <%}  else if (value === "5") { %> <div class="alert alert-dark alert-dismissible fade show" role="alert">
    <strong>Logged out successfully</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }else { %>
  <i></i> <% } %>

          <section class="hero">
            <div class="container" style="margin-top: 50px;">
              <form class="d-flex" action="searchblog" method="post">
                <div class="input-group" id="searchid">
                  <input  class="form-control" type="search" name="title" placeholder="Atleast 2 words" aria-label="Search"  required>
                  <button id="btns" class="btn btn-dark" type="submit" style="border-radius:0px 15px 15px 0px; padding-left: 15px; position: absolute; right: 0; top: 0; bottom: 0;">
                    <i class="bi bi-search text-light"></i>
                  </button>
                </div>
              </form>
              
            </div>
          </section>

          <br>

        
          <section class="featured-posts">
            <div class="container">
              <h2 class="text-dark"><%= pageheading %></h2><br>
              <div class="row row-cols-1 row-cols-md-2 g-4">

                <% bloglist.forEach(function(blog){ %> 

                  <div class="col">
                    <div id="cardid" class="card  bg-dark text-white">
                   
                      <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5><hr>
                        <p class="card-text"><%= blog.content.slice(0,100) %>..........</p>
                        <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More  </a>

                        <div><%= blog.date.toString().slice(0,15) %></div>
                      </div>
                      
                    </div>
                  </div>
      
                <% }); %>

              </div>
            </div>
          </section>
        
        
<%- include("footer.ejs") %>